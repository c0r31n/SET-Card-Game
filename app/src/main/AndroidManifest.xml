<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.setcardgame">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SETCardGame">
        <activity
            android:name=".ViewModel.HowToPage"
            android:parentActivityName=".ViewModel.MainActivity"
            android:label="How To Play"
            android:exported="false" />
        <activity
            android:name=".ViewModel.EndGameScreen"
            android:exported="false"
            android:label="Score"
            android:parentActivityName=".ViewModel.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ViewModel.ScoreboardActivity"
            android:exported="false"
            android:label="Scoreboard"
            android:parentActivityName=".ViewModel.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ViewModel.MultiplayerActivity"
            android:exported="false"
            android:label="Multiplayer"
            android:parentActivityName=".ViewModel.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ViewModel.SingleplayerActivity"
            android:exported="false"
            android:label="Singleplayer"
            android:parentActivityName=".ViewModel.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ViewModel.MainActivity"
            android:exported="true"
            android:label="SET Card Game"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>